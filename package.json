    "@sveltejs/kit": "^2.46.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.14",
    "@types/eslint": "^9.6.1",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.17.0",
    "@types/pg": "^8.15.5",
    "@vitest/browser": "^3.2.4",
    "drizzle-kit": "^0.31.5",
    "drizzle-seed": "^0.3.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "mdsvex": "^0.12.6",
    "mdsvex-relative-images": "^2.0.0",
    "playwright": "^1.56.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-slug": "^6.0.0",
    "remark-preview": "^1.0.3",
    "svelte": "^5.39.11",
    "svelte-check": "^4.3.3",
    "sveltekit-embed": "^0.0.22",
    "sveltekit-superforms": "^2.27.2",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "unist-util-visit": "^5.0.0",
    "unplugin-icons": "^22.4.2",
    "vite": "^7.1.9",
    "vitest": "^3.2.4",
    "vitest-browser-svelte": "^1.1.0"
  },
  "dependencies": {
    "@baselime/pino-transport": "^0.1.5",
    "better-auth": "^1.3.4",
    "dexie": "^4.2.1",
    "drizzle-orm": "^0.44.6",
    "jose": "^6.1.0",
    "luxon": "^3.7.2",
    "pg": "^8.16.3",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.2",
    "zod": "^4.1.11"
  }
